/* miniprogram/pages/poi/poi.wxss */
page {
  height: 100%;
}

.page {
  height: 100%;
}

.poi__hd {
	background: #fff;
  padding: 30px 30px 0px 30px;
  margin-bottom: 8px;
}

.poi__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.poi__details {
    padding: 16px 0px;
    text-align: left;
    font-size: 14px;
}

.poi__detail {
    margin-top: 5px;
}

.poi__footer {
  font-size: 12px;
  margin-top: 5px;
  color: #888888;
  text-align: left;
}

.time__picker {
  position: relative;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
  font-weight: 700;
  font-size: 17px;
  height: auto;
  width: auto;
}

.data__panel {
  position: relative;
  /* padding: 8px; */
  margin-bottom: 8px;
  background: #fff;
}

.data__one {
	font-size: 14px;
	overflow: hidden;
	position: relative;
	background: #fff;
	/* border: 1rpx solid #dddee1; */
	/* border-radius: 5px; */
  /* margin-bottom: 5px; */

  margin: 0;
	border-left: none;
	border-right: none;
	border-radius: 0;
}

.graph__panel {
	font-size: 14px;
	overflow: hidden;
	position: relative;
	background: #fff;
	/* border: 1rpx solid #dddee1; */
	/* border-radius: 5px; */
  margin-bottom: 5px;
}

.graph {
  position: relative;
	padding: 6px 16px;
}

.data__header {
	display: flex;
	padding: 6px 16px;
	align-items: center;
  font-size: 9px;
  color: #888888;
}

.data__content {
	flex: 1;
	text-align: left;
  font-size: 120%;
}

.data__body {
	position: relative;
	padding: 6px 16px;
	color: #495060;
	font-size: 14px
}

.data__body::before {
	content: '';
	position: absolute;
	top: 0;
	left: 0;
	width: 200%;
	height: 200%;
	transform: scale(.5);
	transform-origin: 0 0;
	pointer-events: none;
	box-sizing: border-box;
	border: 0 solid #e9eaec;
	border-top-width: 1px
}

.container {
  position: relative;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  padding: 5px;
  display: flex;
  flex-direction: row;
  /* align-items: center; */
  justify-content: space-between;
  box-sizing: border-box;
} 

.container::before {
	content: '';
	position: absolute;
	top: 0;
	left: 0;
	width: 200%;
	height: 200%;
	transform: scale(.5);
	transform-origin: 0 0;
	pointer-events: none;
	box-sizing: border-box;
	border: 0 solid #e9eaec;
	border-top-width: 1px
}

.forcast_left{
  flex-direction: column;
  flex: 1;
  -webkit-box-flex: 1;
}

.forcast_left_line{
  padding: 0 10px;
  background-color: #FFFFFF;
  flex: 1;
  -webkit-box-flex: 1;
  height: 2em;
  line-height: 2em;
}

.picker-label{
  padding-left: 30px;
  padding-right: 30px;
  background-color: #FFFFFF;
  float: right;
  flex-direction: row;
}

#column-dom{
  height: 500rpx;
  width: 100%;
}

.placeholder{
  margin: 5px;
  padding: 0 10px;
  text-align: center;
  background-color: #F7F7F7;
  height: 2.3em;
  line-height: 2.3em;
  color: rgba(0,0,0,.3);
}